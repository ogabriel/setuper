pkgname='setuper'
pkgver=VERSION
pkgrel=1
pkgdesc='Manage and setup your system and user environment'
url=https://github.com/ogabriel/setuper
arch=('any')
license=('GPL3')

package() {
    depends=(
        'bash'
        'pacman'
        'grep'
        'systemd'
        'sudo'
        'openssh'
    )

    install -m755 -D "$srcdir/setuper" -t "$pkgdir/usr/bin/"
    install -m755 -D "$srcdir/lib/"* -t "$pkgdir/usr/lib/setuper/"
}
