pkgname='setuper'
pkgver=v0.1.0
pkgrel=1
pkgdesc='Manage and setup your system and user environment'
url=https://github.com/ogabriel/setuper
arch=('any')
license=('GPL3')

depends=(
    'bash'
    'pacman'
    'grep'
    'systemd'
    'sudo'
)

package() {
    install -m755 -D "$srcdir/setuper" -t "$pkgdir/usr/bin/"
    install -m755 -D "$srcdir/lib/"*.sh -t "$pkgdir/usr/lib/setuper/"
    install -m755 -D "$srcdir/lib/installers/"*.sh -t "$pkgdir/usr/lib/setuper/installers"
}
